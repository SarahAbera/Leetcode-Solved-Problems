class Solution:
    def scoreOfParentheses(self, s: str) -> int:
        stack = []
        count = 0
        cur = 0
        for char in s:
            if char == "(":
                stack.append(0)
            else:
                mul = stack.pop()    
                if mul == 0:
                    cur = 1
                else:
                    cur = mul * 2
                if stack:
                    stack[-1] += cur
                else:
                    count += cur
        return count
