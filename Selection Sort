#User function Template for python3

class Solution: 
    def select(self, arr, i):
        # code here 
        self.arr = arr
        self.i=i
        
    
    def selectionSort(self, arr,n):
        #code here
        for i in range(n):
            min=i
            for j in range(i+1,n):
                if(arr[j]<arr[min]):
                    min=j
            arr[i],arr[min] = arr[min],arr[i]
                
